<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <!-- Profile Image Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imgProfile"
          android:layout_width="120dp"
          android:layout_height="120dp"
          android:src="@drawable/ic_person"
          android:scaleType="centerCrop"
          android:background="@android:color/darker_gray"
          android:layout_marginBottom="8dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Tap to select profile image"
          android:textSize="14sp"
          android:textColor="@android:color/holo_blue_dark"/>
    </LinearLayout>

    <!-- Personal Details -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/black">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etFullName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Full Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etFatherName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Father's Name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etMotherName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Mother's Name"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Gender"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />
    <!-- Gender Selection -->
    <Spinner
        android:id="@+id/spinnerGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_options"/>

    <!-- Category & Religion -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />
    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/category_options"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Religion"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <Spinner
        android:id="@+id/spinnerReligion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/religion_options"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/etDOB"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Date of Birth (DD/MM/YYYY)"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your last completed education"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="4dp"
            android:textColor="@android:color/black" />

        <RadioGroup
            android:id="@+id/rgEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <RadioButton
              android:id="@+id/rbSSC"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="SSC"
              android:checked="true" />

          <RadioButton
              android:id="@+id/rbHSC"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="HSC" />
        </RadioGroup>

        <!-- SSC Details -->
        <LinearLayout
            android:id="@+id/layoutSSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSSCSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSC School Name" />
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSSC_Board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSC Board" />
          </com.google.android.material.textfield.TextInputLayout>

          <!-- SSC Percentage -->
          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter SSC Percentage">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSSCPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
          </com.google.android.material.textfield.TextInputLayout>

          <!-- SSC Marksheet Upload -->
          <Button
              android:id="@+id/btnUploadSSC"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload SSC Marksheet (PDF)"
              android:backgroundTint="@android:color/holo_blue_dark"
              android:textColor="@android:color/white" />

          <TextView
              android:id="@+id/tvSSCMarksheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="No file selected"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- HSC Details -->
        <LinearLayout
            android:id="@+id/layoutHSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHSC_College"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HSC College Name" />
          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHSC_Board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="HSC Board" />
          </com.google.android.material.textfield.TextInputLayout>

          <!-- HSC Percentage -->
          <com.google.android.material.textfield.TextInputLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Enter HSC Percentage">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etHSCPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
          </com.google.android.material.textfield.TextInputLayout>

          <!-- HSC Marksheet Upload -->
          <Button
              android:id="@+id/btnUploadHSC"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Upload HSC Marksheet (PDF)"
              android:backgroundTint="@android:color/holo_blue_dark"
              android:textColor="@android:color/white" />

          <TextView
              android:id="@+id/tvHSCMarksheet"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="No file selected"
              android:textSize="14sp"
              android:textColor="@android:color/darker_gray"
              android:paddingBottom="8dp" />
        </LinearLayout>



      </LinearLayout>
    </ScrollView>


    <!-- Certificates Upload Section -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Certificates"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"/>

    <!-- Caste Certificate Upload -->
    <Button
        android:id="@+id/btnUploadCaste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Caste Certificate (PDF)"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvCasteCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp"/>

    <!-- Income Certificate Upload -->
    <Button
        android:id="@+id/btnUploadIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Income Certificate (PDF)"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvIncomeCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp"/>

    <!-- Nationality/Domicile Certificate Upload -->
    <Button
        android:id="@+id/btnUploadNationality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Nationality/Domicile (PDF)"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvNationalityCertificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp"/>

    <!-- Caste Validity Upload -->
    <Button
        android:id="@+id/btnUploadValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Caste Validity (PDF)"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tvCasteValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:paddingBottom="8dp"/>


    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

  </LinearLayout>
</ScrollView>
