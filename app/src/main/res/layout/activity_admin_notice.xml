<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <!-- Notice Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:padding="20dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Field -->
            <EditText
                android:id="@+id/et_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Notice Title"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_title"
                android:drawablePadding="10dp"/>

            <!-- Description Field -->
            <EditText
                android:id="@+id/et_notice_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Notice Description"
                android:padding="12dp"
                android:background="@drawable/rounded_edittext"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_description"
                android:drawablePadding="10dp"/>

            <!-- Department Spinner -->
            <Spinner
                android:id="@+id/spinner_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/spinner_background"
                android:padding="10dp"/>

            <!-- Post Notice Button -->
            <Button
                android:id="@+id/btn_post_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Notice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_gradient1"
                android:layout_marginTop="20dp"
                android:padding="14dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
