<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#1565C0" android:endColor="#0D47A1" android:angle="90"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#1976D2" android:endColor="#1565C0" android:angle="90"/>
            <corners android:radius="30dp"/>
            <shadow android:color="#80000000" android:radius="10dp"/>
        </shape>
    </item>
</selector>
